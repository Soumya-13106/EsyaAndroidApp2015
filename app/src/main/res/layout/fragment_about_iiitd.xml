<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/landingpagebg"
    android:orientation="vertical"
    android:layout_centerHorizontal="true"
    android:padding="8dp"
    android:gravity="top|center_vertical|center_horizontal">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:id="@+id/displayPicLogo"
        android:src="@drawable/style3colorlarge"
        android:scaleType="fitXY"
        android:layout_below="@+id/displayPic"
        android:layout_gravity="center"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="-8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:layout_margin="8dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:adjustViewBounds="true"
        android:id="@+id/displayPic"
        android:src="@drawable/image"
        android:scaleType="fitXY"
        android:layout_gravity="center"
        android:layout_margin="2dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:textSize="16sp"
        android:text="Founded as a State University by an Act of the Delhi Government, Indraprastha Institute of Information Technology is a research-oriented university. IIIT-Delhi strongly focuses on practical learning and in depth exploration of concepts in engineering."
        android:id="@+id/about_iiit"
        android:layout_alignBottom="@+id/arrowFwd"
        android:layout_alignParentStart="true"
        android:layout_gravity="center_horizontal"
        android:textStyle="normal"
        android:textColor="#555"
        android:layout_marginBottom="12dp"
        android:gravity="center_vertical|center_horizontal" />

</LinearLayout>