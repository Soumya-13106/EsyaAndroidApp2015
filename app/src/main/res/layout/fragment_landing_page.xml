<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    tools:context="com.iiitd.esya.app.LandingPage">
    <!--android:background="@drawable/firstpage"-->
    <!-->-->

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.iiitd.esya.app.LoginActivityFragment"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        android:layout_gravity="center_vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/linearLayout"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:src="@drawable/style1colorlarge"
                android:id="@+id/imageViewIIITD"
                android:layout_gravity="left"
                android:layout_alignParentTop="true"
                android:layout_weight="1"
                android:layout_margin="4dp" />

            <TextView
                android:text="and"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:minWidth="5dp"
                android:layout_weight="0.75"
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/abc_text_size_small_material"
                android:includeFontPadding="true"
                android:padding="8dp"
                android:id="@+id/textViewAnd"
                android:layout_gravity="right|center_horizontal"
                android:gravity="center_vertical|center_horizontal" />


            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.5"
                android:scaleType="centerInside"
                android:src="@drawable/micromax"
                android:id="@+id/imageViewMicromax"
                android:layout_gravity="right"
                android:layout_margin="4dp" />
        </LinearLayout>
        <TextView
            android:text="present"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textColorPrimary"
            android:textSize="@dimen/abc_text_size_medium_material"
            android:includeFontPadding="true"
            android:textStyle="bold"
            android:id="@+id/textViewPresents"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:layout_below="@+id/linearLayout"
            android:layout_centerHorizontal="true"
            android:padding="8dp"
            android:layout_marginTop="-16dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:minHeight="100dp"
            android:maxHeight="200dp"
            android:scaleType="centerInside"
            android:src="@drawable/esyalogopng"
            android:id="@+id/imageView"
            android:layout_below="@+id/textViewPresents"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="-90dp" />

        <TextView
            android:text="The Annual Techfest of IIIT Delhi \n21st-22nd August, 2015"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:textColor="@color/textColorPrimary"
            android:textAlignment="center"
            android:textSize="@dimen/abc_text_size_medium_material"
            android:includeFontPadding="true"
            android:layout_weight="1"
            android:textStyle="bold"
            android:id="@+id/textViewDescription"
            android:layout_below="@+id/imageView"
            android:layout_centerHorizontal="true"
            android:padding="16dp"
            android:gravity="center_vertical|center_horizontal"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="-120dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp" />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:maxHeight="200dp"
            android:scaleType="centerInside"
            android:src="@drawable/opensource"
            android:id="@+id/imageViewOpenSource"
            android:layout_below="@+id/textViewDescription"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="-60dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp" />

    </LinearLayout>
</FrameLayout>
