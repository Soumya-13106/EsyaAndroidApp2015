<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/landingpagebg"
    android:orientation="vertical"
    android:layout_centerHorizontal="true"
    android:padding="8dp"
    android:gravity="top|center_vertical|center_horizontal">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/displayPicLogo"
        android:src="@drawable/esyalogopng"
        android:layout_weight="1"
        android:layout_below="@+id/displayPic"
        android:layout_centerHorizontal="true"
        android:layout_margin="8dp"
        android:layout_gravity="center" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/displayPic"
        android:src="@drawable/image2"
        android:layout_gravity="center"
        android:layout_weight="3"
        android:adjustViewBounds="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#555"
        android:textSize="@dimen/abc_text_size_subhead_material"
        android:text="The two-day long festival aims to bring together the best from all over the country, as we go nationwide this year, and accord a prodigious platform to compete, perform and collaborate on (mind-blowing) ideas."
        android:id="@+id/about_iiit"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="32dp"
        android:gravity="center_horizontal" />

</LinearLayout>